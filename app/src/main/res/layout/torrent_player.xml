<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:listitem="@layout/torrent_files_item">

    <LinearLayout
        android:id="@+id/torrent_files_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"
            android:text="Player files is empty, please download torrent first" />

        <Button
            android:id="@+id/torrent_files_metadata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:text="@string/download_metadata" />

    </LinearLayout>

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/player_progress"
        tools:listitem="@layout/torrent_files_item" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/player_progress"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <ToggleButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="@drawable/roundlabel_light"
            android:drawableTop="@drawable/ic_loop_black_24dp"
            android:gravity="center"
            android:textOff=""
            android:textOn=""
            android:textSize="0dp"
            android:tint="@android:color/white" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="@drawable/roundlabel_light"
            android:src="@drawable/ic_skip_previous_black_24dp"
            android:tint="@android:color/white" />

        <ImageView
            android:id="@+id/player_play"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="@drawable/roundlabel_light"
            android:src="@drawable/play"
            android:tint="@android:color/white" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="@drawable/roundlabel_light"
            android:src="@drawable/ic_skip_next_black_24dp"
            android:tint="@android:color/white" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="@drawable/roundlabel_light"
            android:src="@drawable/ic_open_with_black_24dp"
            android:tint="@android:color/white" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/player_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00" />

        <SeekBar
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="16:00" />
    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/torrent_files_archive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#38a738"
            android:gravity="center"
            android:textSize="12sp"
            android:text=".rar" />

        <TextView
            android:id="@+id/torrent_files_folder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="./metadata" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="5dp">

            <TextView
                android:id="@+id/torrent_files_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="demo fragmentdemo fragmentdemo fragment.avi"
                android:textColor="?attr/titleColor" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="5dp">

                <TextView
                    android:id="@+id/torrent_files_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Size: 3Gb" />

                <TextView
                    android:id="@+id/torrent_files_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="80%" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/torrent_files_archive_end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#38a738"
            android:gravity="center"
            android:textSize="12sp"
            android:text=".rar" />
    </LinearLayout>

</LinearLayout>